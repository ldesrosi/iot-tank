package com.ibm.iot.tank;

import java.util.Properties;

import com.google.gson.JsonObject;

import com.ibm.iotf.client.device.CommandCallback;
import com.ibm.iotf.client.device.DeviceClient;

import com.pi4j.io.gpio.*;
import com.pi4j.io.gpio.event.GpioPinDigitalStateChangeEvent;
import com.pi4j.io.gpio.event.GpioPinListenerDigital;

public class ControlMotors {
  public static void main(String[] args) {
    Properties options = new Properties();
    try {
       options.load(ControlMotors.class.getResourceAsStream("/iotf.properties"));
    } catch (Exception e) {
      e.printStackTrace();
      System.exit(-1);
    }

    DeviceClient myClient = null;
    try {
      //Instantiate the class by passing the properties file
      myClient = new DeviceClient(options);

      //Pass the above implemented CommandCallback as an argument to this device client
      MotorCommandCallback callback = new MotorCommandCallback();
      Thread callbackThread = new Thread(callback);

      myClient.setCommandCallback(callback);
      callbackThread.start();

      //Connect to the IBM IoT Foundation
      myClient.connect();
 
      //SensorMonitor sensor = new SensorMonitor(myClient);
        GpioController gpio = GpioFactory.getInstance();

        GpioPinDigitalInput pin = gpio.provisionDigitalInputPin(RaspiPin.GPIO_07); //, PinPullResistance.PULL_DOWN);
        pin.setShutdownOptions(true);

        pin.addListener(new GpioPinListenerDigital() {
            @Override
            public void handleGpioPinDigitalStateChangeEvent(GpioPinDigitalStateChangeEvent event) {
                // display pin state on console
                System.out.println(" --> GPIO PIN STATE CHANGE: " + event.getPin() + " = " + event.getState());
               
                //Generate a JSON object of the event to be published
                JsonObject jsonEvent = new JsonObject();
                jsonEvent.addProperty("sensor", "right");

                //device.publishEvent("collisionDetection", jsonEvent, 0); 
            }
        });
    } catch (Exception e) {
      e.printStackTrace();
      System.exit(-1); 
    }

  }
}

